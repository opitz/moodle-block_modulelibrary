{{!
    @template block_modulelibrary/copy_form

    The copy form.

    Example context (json):
    {
        "modulename": "Test Quiz",
        "sections": [
            { "sectionnum": 0, "name": "Append at end" },
            { "sectionnum": 1, "name": "Section 1" },
            { "sectionnum": 2, "name": "Section 2" }
        ]
    }
}}
<div class="copy-form-container p-3 border rounded bg-light">

    <h6 class="mb-3">
        {{#str}} selecttargetsection, block_modulelibrary {{/str}}
    </h6>

    <p class="fw-bold">{{modulename}}</p>

    <form id="copy-assessment-form">

        <div class="mb-3">
            <label for="target-section" class="form-label">
                {{#str}} selecttargetsection, block_modulelibrary {{/str}}
            </label>
            <select id="target-section" class="form-control" required>
                <option value="0">
                    {{#str}} appendatend, block_modulelibrary {{/str}}
                </option>
                {{#sections}}
                    <option value="{{sectionnum}}">{{name}}</option>
                {{/sections}}
            </select>
        </div>

        <div class="mb-3 d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-primary">
                {{#str}} confirmcopy, block_modulelibrary {{/str}}
            </button>
            <button type="button" id="cancel-copy-btn" class="btn btn-secondary">
                {{#str}} cancel, core {{/str}}
            </button>
        </div>

    </form>
</div>
