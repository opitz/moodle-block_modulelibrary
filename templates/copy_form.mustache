<div class="copy-form-container p-3 border rounded bg-light">

    <h6 class="mb-3">
        {{#str}} selecttargetsection, block_modulelibrary {{/str}}
    </h6>

    <p class="font-weight-bold">{{modulename}}</p>

    <form id="copy-assessment-form">

        <div class="form-group">
            <label for="target-section" class="form-label">
                {{#str}} selecttargetsection, block_modulelibrary {{/str}}
            </label>
            <select id="target-section" class="form-control" required>
                <option value="0">
                    {{#str}} appendatend, block_modulelibrary {{/str}}
                </option>
                {{#sections}}
                    <option value="{{sectionnum}}">{{name}}</option>
                {{/sections}}
            </select>
        </div>

        <div class="form-group d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-primary">
                {{#str}} confirmcopy, block_modulelibrary {{/str}}
            </button>
            <button type="button" id="cancel-copy-btn" class="btn btn-secondary">
                {{#str}} cancel, core {{/str}}
            </button>
        </div>

    </form>
</div>
